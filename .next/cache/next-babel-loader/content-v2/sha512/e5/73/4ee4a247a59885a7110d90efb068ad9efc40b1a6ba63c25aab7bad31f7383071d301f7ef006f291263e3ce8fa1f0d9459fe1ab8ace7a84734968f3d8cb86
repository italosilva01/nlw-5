currentEpisodeIndex > 0;\n\n  function playNext() {\n    if (hasNext) {\n      setCurrentEpisodeIndex(currentEpisodeIndex + 1);\n    }\n  }\n\n  function playPrevious() {\n    if (hasPrevious) {\n      setCurrentEpisodeIndex(currentEpisodeIndex - 1);\n    }\n  }\n\n  return (\n    <PlayerContext.Provider\n      value={{\n        episodeList,\n        currentEpisodeIndex,\n        play,\n        playList,\n        isPlaying,\n        togglePlayer,\n        setIsPlayerState,\n        playPrevious,\n        playNext,\n        hasNext,\n        hasPrevious,\n        toggleLoop,\n      }}\n    >\n      {children}\n    </PlayerContext.Provider>\n  );\n}\n\nexport const usePlayer = () => useContext(PlayerContext);\n"]},"metadata":{},"sourceType":"module"}